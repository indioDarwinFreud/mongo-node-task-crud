{{#if tasks}}

  <table class="table table-border table-hover table-dark">
    <head>
      <tr>
        <th>N.</th>
        <th>Title</th>
        <th>Description</th>
        <th>Operations</th>
      </tr>
    </head>
    <tbody>

      {{#each tasks}}
        <tr>
          <td>{{@index}}</td>
          {{! @index es una variable que se puede usar para saber el indice de la lista }}
          <td>{{title}}</td>
          <td>{{description}}</td>
          <td>
            {{! As√≠ se hace una condicional en handlebars }}

            {{#if done}}
              <a
                href="/tasks/{{_id}}/toggleDone"
                class="btn btn-dark"
              >Undone</a>
            {{else}}
              <a
                href="/tasks/{{_id}}/toggleDone"
                class="btn btn-success"
              >Done</a>
            {{/if}}

            <a href="/tasks/{{_id}}/delete" class="btn btn-danger">Delete</a>
            <a href="/tasks/{{_id}}/edit" class="btn btn-info">Update</a>
          </td>
        </tr>

      {{/each}}
    </tbody>
  </table>

{{else}}

  <div class="h-100 d-flex align-items-center justify-content-center">
    <div class="text-center text-white">
      <h1>No Tasks</h1>
      <img src="/icons/empty.svg" class="w-75" />
    </div>
  </div>

{{/if}}